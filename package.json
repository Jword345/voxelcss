{
    "name": "voxelcss",
    "version": "0.0.1",
    "author": "Jason Wohlgemuth",
    "license": "MIT",
    "description": "Building on Voxel.css",
    "main": "voxelcss.js",
    "keywords": [],
    "repository": {
        "type": "git",
        "url": "https://github.com/jhwohlgemuth/voxelcss.git"
    },
    "engines": {
        "node": "*"
    },
    "babel": {
        "presets": [
            "env",
            "babili"
        ]
    },
    "browserify-css": {
        "autoInject": true
    },
    "jest": {
        "setupFiles": [
            "jest-localstorage-mock"
        ]
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-preset-babili": "^0.1.4",
        "babel-preset-env": "^1.6.0",
        "browser-sync": "^2.18.12",
        "browserify": "^14.4.0",
        "browserify-css": "^0.11.0",
        "coveralls": "^2.13.1",
        "eslint": "^4.2.0",
        "eslint-config-omaha-prime-grade": "^4.0.0",
        "eslint-plugin-compat": "^1.0.4",
        "jest": "^20.0.4",
        "jest-localstorage-mock": "^1.2.0",
        "watch": "^1.0.2"
    },
    "scripts": {
        "dev": "stmux [ \"npm run test:watch\" .. \"npm run lint:watch\" ]",
        "demo": "npm run build && npm run browsersync",
        "lint": "eslint -c ./.eslintrc.js ./lib/*.js",
        "lint:watch": "watch 'npm run lint' ./lib",
        "lint:tests": "eslint -c ./.eslintrc.js ./test/mocha/specs/*.js",
        "test": "jest test/.*.test.js",
        "test:watch": "npm test -- --watch",
        "test:ci": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "build": "browserify -g browserify-css -e ./lib/index.js ./lib/index.js --standalone Voxelcss -o ./voxelcss.js",
        "build:watch": "watch 'npm run build' ./lib",
        "postbuild": "babel ./voxelcss.js --out-file ./voxelcss.js",
        "preversion": "npm test",
        "postversion": "git push && git push --tags",
        "rest-api": "json-server --port 8080 --watch test/data/db.json",
        "deploy": "cp -a dist/. dist/.",
        "coverage": "npm test -- --coverage",
        "test:travis": "npm run test:ci",
        "browsersync": "browser-sync start -s ./test/demo --serveStatic . -f ./voxelcss.js --open ./test/demo/index.html --port 1337"
    }
}
